    <script>
        const URL_SCRIPT = "https://script.google.com/macros/s/AKfycbxIaE-VKXXdLpnkKxa2fZoivpAq9jQSuxHFS0_8XohKnHZsHRv5zWqTfBsabo9VL8oh/exec";
        
        const PATOLOGIAS = [
            { num: 1, nombre: "Acn√© vulgar" },
            { num: 2, nombre: "Dermatitis at√≥pica" },
            { num: 3, nombre: "Queratosis seborreica" },
            { num: 4, nombre: "Imp√©tigo no bulloso" },
            { num: 5, nombre: "Psoriasis" },
            { num: 6, nombre: "Melanoma" },
            { num: 7, nombre: "Verruga vulgar" },
            { num: 8, nombre: "Ros√°cea" },
            { num: 9, nombre: "Ti√±a corporis" },
            { num: 10, nombre: "Carcinoma basocelular" },
            { num: 11, nombre: "Nevo melanoc√≠tico com√∫n" },
            { num: 12, nombre: "Lentigo solar" },
            { num: 13, nombre: "Queratosis act√≠nica" },
            { num: 14, nombre: "Dermatitis de contacto al√©rgica" },
            { num: 15, nombre: "Molusco contagioso" }
        ];
        
        let evaluaciones = {};
        
        window.addEventListener('load', () => {
            generarImagenes();
        });
        
        function generarImagenes() {
            const container = document.getElementById('imagesContainer');
            container.innerHTML = '';
            
            PATOLOGIAS.forEach(pat => {
                const div = document.createElement('div');
                div.className = 'image-evaluation';
                div.innerHTML = `
                    <div class="image-eval-title">Imagen ${pat.num}: ${pat.nombre}</div>
                    
                    <div class="image-placeholder">
                        [Imagen ser√° mostrada aqu√≠]
                    </div>
                    
                    <div class="rating-group">
                        <label class="rating-label">Representatividad diagn√≥stica</label>
                        <div class="rating-options">
                            ${[1,2,3,4,5].map(n => `<button type="button" class="rating-btn" onclick="setRating(${pat.num}, 'rep', ${n})">${n}</button>`).join('')}
                        </div>
                    </div>
                    
                    <div class="rating-group">
                        <label class="rating-label">Calidad t√©cnica fotogr√°fica</label>
                        <div class="rating-options">
                            ${[1,2,3,4,5].map(n => `<button type="button" class="rating-btn" onclick="setRating(${pat.num}, 'cal', ${n})">${n}</button>`).join('')}
                        </div>
                    </div>
                    
                    <div class="rating-group">
                        <label class="rating-label">Ausencia de sesgo visual</label>
                        <div class="rating-options">
                            ${[1,2,3,4,5].map(n => `<button type="button" class="rating-btn" onclick="setRating(${pat.num}, 'ses', ${n})">${n}</button>`).join('')}
                        </div>
                    </div>
                `;
                container.appendChild(div);
            });
        }
        
        function setRating(imagen, criterio, valor) {
            if (!evaluaciones[imagen]) {
                evaluaciones[imagen] = {};
            }
            evaluaciones[imagen][criterio] = valor;
            
            // Actualizar bot√≥n seleccionado
            event.target.parentNode.querySelectorAll('.rating-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            event.target.classList.add('selected');
            
            // Actualizar progreso
            actualizarProgreso();
        }
        
        function actualizarProgreso() {
            let totalEvaluaciones = 0;
            PATOLOGIAS.forEach(pat => {
                if (evaluaciones[pat.num] && evaluaciones[pat.num].rep && evaluaciones[pat.num].cal && evaluaciones[pat.num].ses) {
                    totalEvaluaciones++;
                }
            });
            
            const porcentaje = (totalEvaluaciones / 15) * 100;
            document.getElementById('progressFill').style.width = porcentaje + '%';
        }
        
        function enviarValidacion() {
            // Validar campos
            if (!document.getElementById('nombre').value) {
                mostrarError('Por favor, completa el nombre');
                return;
            }
            if (!document.getElementById('cmp').value) {
                mostrarError('Por favor, ingresa el CMP');
                return;
            }
            if (!document.getElementById('email').value) {
                mostrarError('Por favor, ingresa un email v√°lido');
                return;
            }
            if (!document.getElementById('consentimiento').checked) {
                mostrarError('Debes aceptar el consentimiento informado');
                return;
            }
            
            // Validar evaluaciones completas
            let incompleto = false;
            PATOLOGIAS.forEach(pat => {
                if (!evaluaciones[pat.num] || !evaluaciones[pat.num].rep || !evaluaciones[pat.num].cal || !evaluaciones[pat.num].ses) {
                    incompleto = true;
                }
            });
            
            if (incompleto) {
                mostrarError('Debes evaluar todas las im√°genes (15/15)');
                return;
            }
            
            // Preparar datos
            const datos = {
                nombre: document.getElementById('nombre').value,
                cmp: document.getElementById('cmp').value,
                rne: document.getElementById('rne').value,
                email: document.getElementById('email').value,
                institucion: document.getElementById('institucion').value,
                experiencia: document.getElementById('experiencia').value,
                fecha: new Date().toLocaleDateString('es-PE'),
                evaluaciones: evaluaciones
            };
            
            // Desabilitar bot√≥n
            document.getElementById('btnEnviar').disabled = true;
            document.getElementById('btnEnviar').textContent = 'Enviando...';
            
            // Enviar a Google Sheets
            fetch(URL_SCRIPT, {
                method: 'POST',
                body: JSON.stringify(datos)
            })
            .then(res => res.json())
            .then(data => {
                mostrarResultados(datos);
            })
            .catch(err => {
                mostrarError('Error al enviar: ' + err);
                document.getElementById('btnEnviar').disabled = false;
                document.getElementById('btnEnviar').textContent = 'Enviar Validaci√≥n';
            });
        }
        
        function mostrarResultados(datos) {
            document.getElementById('formSection').classList.add('hidden');
            document.getElementById('resultsSection').classList.remove('hidden');
            
            // Llenar datos
            document.getElementById('resNombre').textContent = datos.nombre;
            document.getElementById('resCMP').textContent = datos.cmp;
            document.getElementById('resInstitucion').textContent = datos.institucion;
            document.getElementById('resFecha').textContent = datos.fecha;
            
            // Llenar tabla
            const tbody = document.getElementById('resultsTableBody');
            tbody.innerHTML = '';
            
            PATOLOGIAS.forEach(pat => {
                const ev = datos.evaluaciones[pat.num];
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${pat.num}</td>
                    <td>${pat.nombre}</td>
                    <td>${ev.rep}</td>
                    <td>${ev.cal}</td>
                    <td>${ev.ses}</td>
                `;
                tbody.appendChild(tr);
            });
        }
        
        function enviarWhatsapp() {
            const nombre = document.getElementById('resNombre').textContent;
            const mensaje = `¬°Hola! He completado la validaci√≥n de expertos para CPDD-IC.\n\nEvaluador: ${nombre}\n\nGracias por tu atenci√≥n.`;
            const url = `https://wa.me/51960310119?text=${encodeURIComponent(mensaje)}`;
            window.open(url, '_blank');
        }
        
        function descargarPDF() {
            alert('Funci√≥n de descarga PDF - Se puede integrar con pdfkit o similar');
            // Aqu√≠ se integrar√≠a una librer√≠a para generar PDF
        }
        
        function mostrarError(msg) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = msg;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }
    </script>
</body>
